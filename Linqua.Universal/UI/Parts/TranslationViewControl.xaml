<UserControl x:Class="Linqua.UI.TranslationViewControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:loc="using:Linqua.UI"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance loc:EntryViewModel, IsDesignTimeCreatable=True}"
			 x:Name="ThisControl"
			 HorizontalContentAlignment="Left">

	<Grid>
		<TextBlock x:Uid="EntryListItemView_TranslatingBusyTextBlock"
				   Text="RES_MISSING Translating..."
				   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
				   Visibility="{Binding IsTranslating, Converter={StaticResource BooleanToVisibilityConverter}}"
				   HorizontalAlignment="{Binding ElementName=ThisControl, Path=HorizontalContentAlignment}"/>

		<TextBlock Text="{Binding Definition}"
				   TextWrapping="Wrap"
				   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
				   Visibility="{Binding IsTranslating, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
				   HorizontalAlignment="{Binding ElementName=ThisControl, Path=HorizontalContentAlignment}"/>
	</Grid>
</UserControl>
