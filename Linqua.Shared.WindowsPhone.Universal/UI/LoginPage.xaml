<Page x:Class="Linqua.UI.LoginPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:loc="using:Linqua.UI"
	  mc:Ignorable="d"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	  d:DataContext="{d:DesignInstance loc:LoginViewModel, d:IsDesignTimeCreatable=True}">

	<Grid VerticalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<ProgressRing Grid.Row="0"
					  IsActive="True"
					  Background="Transparent"
					  Foreground="{StaticResource ApplicationThemeBrush}"
					  Margin="12,0,12,0" />

		<TextBlock x:Uid="LoggingInProgressLabel" 
                   Grid.Row="1"
                   Text="RES_MISSING LoggingInProgressLabel"
				   Margin="0,12,0,0"
				   FontSize="16"
				   HorizontalAlignment="Center"
				   Foreground="{StaticResource ApplicationThemeBrush}" />


	</Grid>
</Page>
