<Application x:Class="Linqua.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Linqua">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/CommonResources.xaml" />
				<ResourceDictionary Source="Resources/Converters.xaml"/>
				<ResourceDictionary Source="Resources/ButtonStyles.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<SolidColorBrush x:Key="ProgressBarIndeterminateForegroundThemeBrush"
							 Color="{StaticResource ApplicationThemeColor}" />

			<x:Double x:Key="ProgressBarThemeMinHeight">2</x:Double>

			<SolidColorBrush x:Key="TextBoxBackgroundThemeBrush"
							 Color="White" />

			<SolidColorBrush x:Key="PivotHeaderForegroundUnselectedBrush"
							 Color="{StaticResource TextOnThemeBackgroundColor}"
							 Opacity="0.5"/>
			<SolidColorBrush x:Key="PivotHeaderForegroundSelectedBrush"
							 Color="{StaticResource TextOnThemeBackgroundColor}" />

			<!--<SolidColorBrush x:Key="TextBoxBorderThemeBrush"
							 Color="{StaticResource ApplicationThemeColor}" />-->
		</ResourceDictionary>
		
	</Application.Resources>
	
</Application>
