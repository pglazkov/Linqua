<UserControl x:Class="Linqua.RandomEntryListItemView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:loc="using:Linqua"
			 xmlns:parts="using:Linqua.Views.Parts"
			 xmlns:behaviors="using:Linqua.ViewModels.Behaviors"
			 mc:Ignorable="d"
			 d:DesignHeight="480"
			 d:DesignWidth="480"
			 d:DataContext="{d:DesignInstance loc:EntryListItemViewModel, IsDesignTimeCreatable=True}">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/CommonResources.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

	</UserControl.Resources>

	<FlyoutBase.AttachedFlyout>
		<MenuFlyout MenuFlyoutPresenterStyle="{StaticResource EntryItemMenuFlyoutPresenterStyle}">
			<MenuFlyoutItem x:Uid="DeleteFlyoutItem"
							Text="Delete"
							Command="{Binding DeleteCommand}" />

		</MenuFlyout>
	</FlyoutBase.AttachedFlyout>

	<loc:FlipControl x:Name="FlipControl" 
					 Margin="0,25,0,25"
					 Height="182"
					 IsFlipped="{Binding IsTranslationShown, Mode=TwoWay}">
		<loc:FlipControl.FrontSideContent>
			<Grid VerticalAlignment="Center"
				  Margin="24,24,24,24">
				<!--<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>-->

				<Viewbox Grid.Row="0"
						 Grid.Column="0"
						 Stretch="Uniform"
						 StretchDirection="DownOnly"
						 VerticalAlignment="Center"						 
						 Height="40"
						 Margin="0,0,0,12">

					<TextBlock Text="{Binding Text}"
							   Style="{ThemeResource ListViewItemTextBlockStyle}"
							   LineHeight="21.5"
							   TextLineBounds="Tight"
							   FontSize="72"
							   Foreground="{StaticResource EntryTextForegroundBrush}"
							   TextWrapping="Wrap"
							   VerticalAlignment="Top"
							   Pivot.SlideInAnimationGroup="1"
							   CommonNavigationTransitionInfo.IsStaggerElement="True"
							   HorizontalAlignment="Center" />
				</Viewbox>

				<!--<Border Grid.Row="1"
						BorderThickness="0,1,0,0"
						BorderBrush="{ThemeResource EntryBoxBorderBrush}"
						Margin="0,24,0,12" />

				<Grid Grid.Row="2"
					  HorizontalAlignment="Stretch">
					--><!--<Button Style="{StaticResource NextButtonStyle}"
							DataContext="{Binding Behaviors[RequestNextRandomEntryCommandBehavior]}"
							d:DataContext="{d:DesignInstance behaviors:RequestNextRandomEntryCommandBehavior}"
							Command="{Binding RequestNextRandomEntryCommand}"
							Visibility="{Binding CanExecute, Converter={StaticResource BooleanToVisibilityConverter}}"
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							Margin="8,0,0,0" />-->

					<!--<Button Style="{StaticResource RedoButtonStyle}"
							DataContext="{Binding Behaviors[RequestNextRandomEntryCommandBehavior]}"
							d:DataContext="{d:DesignInstance behaviors:RequestNextRandomEntryCommandBehavior}"
							Command="{Binding RequestNextRandomEntryCommand}"
							Visibility="{Binding CanExecute, Converter={StaticResource BooleanToVisibilityConverter}}"
							VerticalAlignment="Center"
							HorizontalAlignment="Center" />--><!--

					<Button Style="{StaticResource InfoButtonStyle}"
							Click="OnFlipBackButtonPressed"
							VerticalAlignment="Center"
							HorizontalAlignment="Center" />
				</Grid>-->

			</Grid>
		</loc:FlipControl.FrontSideContent>
		
		<loc:FlipControl.BackSideContent>
			<Grid Margin="24,12,24,12">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
						   Text="translation"
						   Foreground="{ThemeResource TextBoxPlaceholderTextThemeBrush}"
						   FontSize="10"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Top"
						   Margin="0,0,0,0">
				</TextBlock>

				<Viewbox Grid.Row="1"
						 Grid.Column="0"
						 Stretch="Uniform"
						 StretchDirection="DownOnly"
						 VerticalAlignment="Center"
						 CommonNavigationTransitionInfo.IsStaggerElement="True"
						 Height="50"
						 Margin="0,0,0,0">
					<parts:TranslationViewControl Visibility="{Binding IsDefinitionVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
												  Pivot.SlideInAnimationGroup="2"
												  VerticalAlignment="Center"
												  HorizontalAlignment="Center"
												  CommonNavigationTransitionInfo.IsStaggerElement="True"
												  FontSize="72" />
				</Viewbox>

				<Border Grid.Row="2"
						BorderThickness="0,1,0,0"
						BorderBrush="{ThemeResource EntryBoxBorderBrush}"
						Margin="0,12,0,12" />

				<Grid Grid.Row="3"
					  HorizontalAlignment="Stretch">
					<StackPanel Orientation="Horizontal"
								HorizontalAlignment="Center">
						<ToggleButton Style="{StaticResource MarkLearnedButtonStyle}"
									  IsChecked="{Binding IsLearnt, Mode=TwoWay}"
									  VerticalAlignment="Center" />

						<!--<TextBlock Text="mark learned"
								   FontSize="{ThemeResource TextStyleSmallFontSize}"
								   Foreground="{ThemeResource TextBoxPlaceholderTextThemeBrush}"
								   VerticalAlignment="Center"
								   Margin="4,0,0,0" />-->
					</StackPanel>


					<!--<Button Style="{StaticResource UndoButtonStyle}"
							Click="OnFlipFrontButtonPressed"
							VerticalAlignment="Center"
							HorizontalAlignment="Right" />-->
				</Grid>

			</Grid>
		</loc:FlipControl.BackSideContent>
	</loc:FlipControl>
</UserControl>
