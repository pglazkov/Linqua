<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="using:Linqua.Resources">

	<Color x:Key="ApplicationThemeColor">#8CC63E</Color>
	<SolidColorBrush x:Key="ApplicationThemeBrush"
					 Color="{StaticResource ApplicationThemeColor}"/>
	
	<SolidColorBrush x:Key="ProgressRingBrush"
					 Color="{StaticResource ApplicationThemeColor}"/>
	
	<SolidColorBrush x:Key="WordListBackground"
					 Color="White"/>

	<Color x:Key="TextOnThemeBackgroundColor">White</Color>
	<SolidColorBrush x:Key="TextOnThemeBackgroundBrush"
					 Color="{StaticResource TextOnThemeBackgroundColor}"/>
	
	<SolidColorBrush x:Key="EntryTextForegroundBrush"
					 Color="{ThemeResource PhoneTextHighColor}"/>
	
	<LinearGradientBrush x:Key="UnderlineBrush"
						 StartPoint="0,0"
						 EndPoint="1,0">
		<GradientStop Color="{StaticResource ApplicationThemeColor}"
					  Offset="0.0" />
		<GradientStop Color="{StaticResource ApplicationThemeColor}"
					  Offset="0.5" />
		<GradientStop Color="Transparent"
					  Offset="1.0" />
	</LinearGradientBrush>
</ResourceDictionary>
