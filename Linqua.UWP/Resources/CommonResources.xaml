    <Color x:Key="PhoneBackgroundColor">Black</Color>
    <Color x:Key="PhoneTextHighColor">#FFFFFFFF</Color>

    <Color x:Key="ApplicationThemeColor">#B5DB4E</Color>
    <SolidColorBrush x:Key="ApplicationThemeBrush"
                     Color="{StaticResource ApplicationThemeColor}" />

    <SolidColorBrush x:Key="ProgressRingBrush"
                     Color="{StaticResource ApplicationThemeColor}" />

    <Color x:Key="TextOnThemeBackgroundColor">White</Color>
    <SolidColorBrush x:Key="TextOnThemeBackgroundBrush"
                     Color="{StaticResource TextOnThemeBackgroundColor}" />

    <SolidColorBrush x:Key="EntryTextForegroundBrush"
                     Color="{ThemeResource PhoneTextHighColor}" />

    <SolidColorBrush x:Key="ApplicationThemeDimmedBrush"
                     Color="{StaticResource ApplicationThemeColor}"
                     Opacity="0.3" />

    <LinearGradientBrush x:Key="UnderlineBrush"
                         StartPoint="0,0"
                         EndPoint="1,0">
        <GradientStop Color="{StaticResource ApplicationThemeColor}"
                      Offset="0.0" />
        <GradientStop Color="{StaticResource ApplicationThemeColor}"
                      Offset="0.5" />
        <GradientStop Color="Transparent"
                      Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="UnderlineDimmedBrush"
                         StartPoint="0,0"
                         EndPoint="1,0"
                         Opacity="0.4">
        <GradientStop Color="{StaticResource ApplicationThemeColor}"
                      Offset="0.0" />
        <GradientStop Color="{StaticResource ApplicationThemeColor}"
                      Offset="0.5" />
        <GradientStop Color="Transparent"
                      Offset="1.0" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ProgressBarIndeterminateForegroundThemeBrush"
                     Color="{StaticResource ApplicationThemeColor}" />

    <x:Double x:Key="ProgressBarThemeMinHeight">2</x:Double>

    <SolidColorBrush x:Key="TextBoxBackgroundThemeBrush"
                     Color="White" />

    <Color x:Key="SystemColorControlAccentColor">#8CC63E</Color>
    <SolidColorBrush x:Key="PhoneAccentBrush"
                     Color="{StaticResource SystemColorControlAccentColor}" />

    <SolidColorBrush x:Key="ButtonPressedBackgroundThemeBrush"
                     Color="{ThemeResource SystemColorControlAccentColor}" />

    <SolidColorBrush x:Key="TextSelectionHighlightColorThemeBrush"
                     Color="{ThemeResource SystemColorControlAccentColor}" />

    <!-- ===================================================== -->

    <Thickness x:Key="PivotPortraitThemePadding">0</Thickness>
    <Thickness x:Key="PivotLandscapeThemePadding">0</Thickness>

    <!-- ===================================================== -->

    <x:Double x:Key="TextStyleSmallFontSize">10.66</x:Double>

