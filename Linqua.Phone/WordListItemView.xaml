<UserControl x:Class="Linqua.WordListItemView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:linqua="clr-namespace:Linqua;assembly=Linqua.Portable"
             mc:Ignorable="d"
			 FontFamily="{StaticResource PhoneFontFamilyNormal}"
			 FontSize="{StaticResource PhoneFontSizeNormal}"
			 Foreground="{StaticResource PhoneForegroundBrush}"
			 d:DesignHeight="480"
			 d:DesignWidth="480"
			 d:DataContext="{d:DesignInstance linqua:WordListItemViewModel, IsDesignTimeCreatable=True}">

	<Grid x:Name="LayoutRoot"
		  Background="{StaticResource PhoneChromeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<TextBlock Text="{Binding Text}" 
				   Style="{StaticResource PhoneTextLargeStyle}"/>
		
		<TextBlock Grid.Row="1" 
				   Text="{Binding DateAdded, StringFormat='Added: {0}'}"
				   Style="{StaticResource PhoneTextSmallStyle}"/>
	</Grid>
</UserControl>